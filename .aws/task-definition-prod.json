{
  "family": "alloff-api-prod",
  "executionRoleArn": "ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "alloff-api-prod",
      "image": "193142563486.dkr.ecr.ap-northeast-2.amazonaws.com/alloff-api-prod:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "command": ["/go/src/app/apiServer"],
      "environment": [
        {
          "name": "API_TYPE",
          "value": "graphql"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "alloff-api-prod",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "api",
          "awslogs-create-group": "true"
        }
      }
    },
    {
      "name": "alloff-grpc-prod",
      "image": "193142563486.dkr.ecr.ap-northeast-2.amazonaws.com/alloff-api-prod:latest",
      "portMappings": [
        {
          "containerPort": 9000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "command": ["/go/src/app/grpcServer"],
      "environment": [
        {
          "name": "API_TYPE",
          "value": "grpc"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "alloff-grpc-prod",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "grpc",
          "awslogs-create-group": "true"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "1024"
}
