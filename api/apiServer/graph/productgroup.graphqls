scalar Upload

type ProductGroup {
  id: ID!
  title: String!
  shortTitle: String!
  instruction: [String!]!
  imgUrl: String!
  products: [Product!]!
  startTime: Date!
  finishTime: Date!
  numAlarms: Int!
  setAlarm: Boolean!
  brand: Brand!
  totalProducts: Int!
}

enum ExhibitionType {
  GROUPDEAL
  TIMEDEAL
  NORMAL
  BRAND_TIMEDEAL
}

type Exhibition {
  id: ID!
  bannerImage: String!
  thumbnailImage: String!
  title: String!
  subTitle: String!
  description: String!
  productGroups: [ProductGroup!]!
  startTime: Date!
  finishTime: Date!
  targetSales: Int!
  currentSales: Int!
  exhibitionType: ExhibitionType!
  banners: [ExhibitionBanner!]!
  classifier: ExhibitionClassifier!
  totalProducts: Int!
  totalProductGroups: Int!
}

type ExhibitionBanner {
  imgUrl: String!
  productGroupId: String!
  title: String!
  subtitle: String!
}

type ExhibitionClassifier {
  classifier: [AlloffClassifier!]!
  first: [CategoryClassifier!]!
  second: [CategoryClassifier!]!
}

extend type Query {
  productGroup(id: String!): ProductGroup!
  productGroups: [ProductGroup!]!
  exhibition(id: String!): Exhibition!
  exhibitions: [Exhibition!]!
  timedeal: Exhibition!
  groupdeal: Exhibition!
}
