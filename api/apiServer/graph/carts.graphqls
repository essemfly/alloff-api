type Cart {
  id: ID!
  items: [CartItem!]!
}

type CartItem {
  product: Product!
}

input AddCartItemInput {
  cartId: String!
  productId: String!
  selectsize: String!
  quantity: Int!
}

extend type Query {
  cart(id: String!): Cart!
}

extend type Mutation {
  addCartItem(input: AddCartItemInput): Cart!
  removeCartItem(cartId: String!, productId: String!): Cart!
}
